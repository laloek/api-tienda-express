<%- include("../header");%>
<div class="col-12">
    <h1>Productos</h1>
    <table class="table table-bordered">
        <thead>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Editar</th>
            <th>Borrar</th>
        </thead>
        <tbody>
        <% productos.forEach(producto =>{ %>
            <tr>
                    <td><%= producto.nombre %></td>
                    <td><%= producto.precio %></td>
                    <td>
                        <a href="/productos/editar/<%= producto.id_productos %>" 
                            class="btn btn-warning">Editar</a>
                    </td>
                    <td>
                        <a href="/productos/eliminar/<%= producto.id_productos %>"
                            class="btn btn-danger">Elimnar</a>
                    </td>
            </tr>
            <% }) %>    
        </tbody>
    </table>
</div>
<%- include("../footer");%>