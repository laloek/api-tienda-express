<%- include("../header");%>

    <div class="col-12">

        <form method="post" action="/productos/actualizar">
            
            <input value="<%= producto.id_productos %>" name="id" type="hidden">    
        
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= producto.nombre %>" required id="nombre" 
            placeholder="Nombre de producto" class="form-control" 
            type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input value="<%= producto.precio %>" required id="precio" 
            placeholder="Precio de producto" class="form-control" 
            type="number" name="precio">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            <a href="/productos" class="btn btn-primary">Regresar</a>
        </div>
        
        </form>


    </div>

<%- include("../footer");%>
